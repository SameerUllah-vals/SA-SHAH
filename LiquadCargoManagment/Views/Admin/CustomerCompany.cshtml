
@{
    ViewBag.Title = "Customer Company";
}


<div class="content-header">

    <div class="header-section">
        <h1>
            Customer Company<br><small>Create Read Update Delete CustomerCompany</small>
        </h1>
    </div>

</div>
<ul class="breadcrumb breadcrumb-top">
    <li>Admin</li>
    <li><a href="javascript:;">Customer Company</a></li>
</ul>

<!-- END Datatables Header -->
<!-- Datatables Content -->
<div class="block full">
    <div class="block-title row">
        <div class="col-md-12">
            @{string action =  Session["Allow"] .ToString(); }
            @if (action.ToUpper().Contains("C"))
            {
                <a id="" class="btn btn-primary btn-sm pull-right" onclick="$('#modal-add').modal('show'); ClearItem(); Enable();" href="#">Add New | <i class="fa fa-plus"></i></a>
            }
        </div>
    </div>

    <div class="" id="grid">
        @Html.Partial("_CustomerCompany")
    </div>
</div>

<!-- END Datatables Content -->





<div id="modal-add" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header text-center">
                <h2 class="modal-title"><i class="fa fa-pencil-alt"></i> CustomerCompanyType</h2>
            </div>
            <!-- END Modal Header -->
            <!-- Modal Body -->
            @using (Ajax.BeginForm("addCustomerCompany", "Admin", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "fnSuccess", OnFailure = "fnFailed" }))
            {
                <div class="modal-body">
                    <table class="table table-responsive">
                        <tbody>
                            <tr>
                                <td>
                                    <input type="hidden" name="ID" id="hfEditID" />
                                    <label class="control-label">Code</label>
                                    <input type="text" id="Code" name="Code" class="form-control" required />
                                </td>
                                <td>
                                    <label class="control-label">Name</label>
                                    <input type="text" id="Name" name="Name" class="form-control" required />
                                </td>
                                <td>
                                    <label class="control-label">Contact</label>
                                    <input type="text" id="Contact" name="Contact" class="form-control" required />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label class="control-label">Own Groups</label>
                                    @Html.DropDownList("GroupID", ViewBag.CustomerGroup as SelectList, "-Select-", new { @class = "form-control", @Required = true })
                                </td>
                            </tr>
                            <tr>



                                <td>

                                    <label class="control-label">Other Contact</label>
                                    <input type="text" id="ContactOther" name="ContactOther" class="form-control" />
                                </td>
                                <td>
                                    <label class="control-label">Email</label>
                                    <input type="text" id="EmailAdd" name="EmailAdd" class="form-control" />
                                </td>
                                <td>
                                    <label class="control-label">Website</label>
                                    <input type="text" id="WebAdd" name="WebAdd" class="form-control" />
                                </td>
                            </tr>
                            <tr>
                            </tr>
                            <tr>
                                <td>
                                    <label class="control-label">Address</label>
                                    <textarea id="Address" name="Address" cols="3" class="form-control"></textarea>
                                </td>
                                <td>
                                    <label class="control-label">Description</label>
                                    <textarea id="Description" name="Description" cols="3" class="form-control"></textarea>
                                </td>
                            </tr>

                        </tbody>
                    </table>

                </div>

                <div class="modal-footer">

                    <button type="submit" id="btnSaveEdit" class="btn btn-primary pull-right"><b><i class="fa fa-save"></i> Save</b></button>
                </div>
            }
            <!-- END Modal Body -->
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link rel="stylesheet" href="~/css/customDataTable.css" />
<link rel="stylesheet" href="~/css/DataTableThemeController.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css" />

<script>
    $(document).ready(function () {
        $("#example").DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });

    function fnSuccess(response) {
        if (response.Status != "OK") {
            Message("Required", response.Message, "error");
        }
        else {
            $('#modal-add').modal('hide');
            Message("Success", "Record Saved Success", "success");
            $("#grid").html(response.html);
            ClearItem();
            GetOrders();
        }
    }
    function fnFailed(error) {
        // alert('Request Failed');
        window.location.reload();
    }

    function Message(title, text, type) {
        Swal.fire({
            title: title + '!',
            text: text,
            icon: type,
            confirmButtonText: 'OK'
        })
    }
    function GetOrders() {
        $('#example').DataTable();
    }

    function ClearItem() {
        $("input[type='text']").val('');
        $("input[type='hidden']").val('');
        $("input[type='email']").val('');
        $("input[type='number']").val('');
        $("textarea").val('');
    }
    function viewRecord(object, e) {
        console.log(object)
        $("#modal-add").modal('show');
        Enable();
        //let currentRow = $(e).parent("td").parent("tr").closest('tr');
        //let Remarks = currentRow.find("td:eq(8) i").attr("view-remarks");
        //let DesignerRemarks = currentRow.find("td:eq(8) i").attr("d-remarks");
        $("#Code").val(object.Code);
        $("#Name").val(object.Name);
        $("#Contact").val(object.Contact);
        $("#ContactOther").val(object.ContactOther);
        $("#EmailAdd").val(object.EmailAdd);
        $("#WebAdd").val(object.WebAdd);
        $("#Address").val(object.Address);
        $("#Description").val(object.Description);
        $("#GroupID").val(object.GroupID);
        let OrderID = object.ID;
        $("#hfEditID").val(OrderID);

    }

        function viewRecordRead(object, e) {
        console.log(object)
        $("#modal-add").modal('show');
        Disable();
        //let currentRow = $(e).parent("td").parent("tr").closest('tr');
        //let Remarks = currentRow.find("td:eq(8) i").attr("view-remarks");
        //let DesignerRemarks = currentRow.find("td:eq(8) i").attr("d-remarks");
        $("#Code").val(object.Code);
        $("#Name").val(object.Name);
        $("#Contact").val(object.Contact);
        $("#ContactOther").val(object.ContactOther);
        $("#EmailAdd").val(object.EmailAdd);
        $("#WebAdd").val(object.WebAdd);
        $("#Address").val(object.Address);
        $("#Description").val(object.Description);
        $("#GroupID").val(object.GroupID);
        let OrderID = object.ID;
        $("#hfEditID").val(OrderID);

    }

    function Disable() {
        $("#Code").attr("readonly",true);
        $("#Name").attr("readonly",true);
        $("#Contact").attr("readonly",true);
        $("#ContactOther").attr("readonly",true);
        $("#EmailAdd").attr("readonly",true);
        $("#WebAdd").attr("readonly",true);
        $("#Address").attr("readonly",true);
        $("#Description").attr("readonly",true);
        $("#GroupID").attr("readonly",true);
    }
        function Enable() {
        $("#Code").attr("readonly",false);
        $("#Name").attr("readonly",false);
        $("#Contact").attr("readonly",false);
        $("#ContactOther").attr("readonly",false);
        $("#EmailAdd").attr("readonly",false);
        $("#WebAdd").attr("readonly",false);
        $("#Address").attr("readonly",false);
        $("#Description").attr("readonly",false);
        $("#GroupID").attr("readonly",false);
    }

    function DeleteModel(Id) {
        debugger;
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: `../Admin/DeleteCustomerCompany`,
                    type: 'POST',
                    data: { ID: Id },
                    success: function (res) {
                        if (res.Status != "OK") {
                            Message("Error", res.Message, "error");
                        }
                        else {
                            $("#grid").html(res.html);
                            GetOrders();
                            Message("Success", "Record Deleted Success", "success");
                        }
                    },
                    error: function () {
                        alert('error');
                    }
                });

            }
        })

    }
</script>